package RegularPractice;

import java.util.Scanner;

public class ConvertLowercaseToUpperCase {

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
//		System.out.println("Enter the String");
//		String str=sc.nextLine();
//		//String str1=str.toLowerCase();
//		//Iterate over the String to convert into Lowercase
//		StringBuilder newstr=new StringBuilder();
//		for(int i=0;i<str.length();i++)
//		{
//			char c=str.charAt(i);
//			if(c >='A'&&c<='Z')
//			{
//				c=(char)(c+32);
//			}
//			newstr.append(c);
//		}
//		System.out.println(newstr.toString());
//	}
		System.out.print("Enter a string: ");
        String input = scanner.nextLine();
        
        StringBuilder lowercased = new StringBuilder();

        // Iterate through each character in the input string
        for (int i = 0; i < input.length(); i++) {
            char ch = input.charAt(i);

            // Check if the character is uppercase
            if (ch >= 'A' && ch <= 'Z') {
                // Convert to lowercase by adding 32 to the ASCII value
                ch = (char) (ch + 32);
            }

            // Append the converted character to the result
            lowercased.append(ch);
        }

        // Print the result
        System.out.println("Lowercase version: " + lowercased.toString());
    }


}
